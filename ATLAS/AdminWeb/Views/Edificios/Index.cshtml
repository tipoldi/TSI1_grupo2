@model IEnumerable<AdminWeb.Models.Edificio>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Administracion de Edificios</h2>
    <p class="lead">Aqui se definen los edificios disponibles para los jugadores de TU juego</p>
    <p><a class="btn btn-atlas" @Html.ActionLink("Nuevo Edificio", "Create", "Edificios")</a></p>
</div>

<div class="jumbotron">
    <table class="table">


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="http://localhost:1428/Images/Apratamentos.png" alt="se tiene que ver una IMAGEN!!!! width="100" height="100">
                </td>
                <td>
                    <p class="lead">
                        Nombre:      @Html.DisplayFor(modelItem => item.nombre) <br />
                        Resistencia: @Html.DisplayFor(modelItem => item.resistencia)<br />
                        Ataque:      @Html.DisplayFor(modelItem => item.ataque)<br />
                        Dependencias: ????
                    </p>
                </td>
                <td>
                    <p><a class="btn btn-atlas" @Html.ActionLink("Modificar", "Edit", new { id = item.ID })</p>
                    <p><a class="btn btn-atlas" @Html.ActionLink("Borrar", "Delete", new { id = item.ID })</p>
                </td>
            </tr>
        }

    </table>
</div>